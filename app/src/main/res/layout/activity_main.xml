<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/arrowCard"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="5dp">

            <ImageView
                android:id="@+id/img_arrow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@drawable/arrow_back" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtContact"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="16dp"
            android:text="Contact Us"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_girl"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="54dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/child" />

        <ImageView
            android:id="@+id/img_search"
            android:layout_width="46dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/search" />

    </LinearLayout>

    <ImageView
        android:id="@+id/img_office"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/office"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBar" />


    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_office">

        <androidx.cardview.widget.CardView
            android:id="@+id/Card_Call"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            app:cardCornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_office">


            <ImageView
                android:id="@+id/img_circle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/circle" />

            <ImageView
                android:id="@+id/call"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="26dp"
                app:srcCompat="@drawable/call" />

            <TextView
                android:id="@+id/txt_Call"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginStart="34dp"
                android:layout_marginTop="66dp"
                android:text="Call Us"
                android:textColor="@color/yellow"
                android:textStyle="bold"

                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Card_Email"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            app:cardCornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_office">


            <ImageView
                android:id="@+id/img_circle2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/circle_green" />

            <ImageView
                android:id="@+id/img_email"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="26dp"
                app:srcCompat="@drawable/email" />

            <TextView
                android:id="@+id/txt_email"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="66dp"
                android:text="Email Us"
                android:textColor="@color/green_dark"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Card_Chat"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            app:cardCornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_office">


            <ImageView
                android:id="@+id/img_circle3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/circle_purple" />

            <ImageView
                android:id="@+id/img_chat"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="26dp"
                app:srcCompat="@drawable/chat" />

            <TextView
                android:id="@+id/txt_chat"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="66dp"
                android:text="Chat"
                android:textColor="@color/purple"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/LastCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardCornerRadius="34dp"
        app:cardElevation="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.44"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottomBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/LastCard_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:padding="8dp"
                android:elevation="4dp"
                android:background="@drawable/square_shape"
                android:hint="Enter Full Name Here"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edit_email"
                android:layout_width="370dp"
                android:layout_height="56dp"
                android:layout_marginTop="30dp"
                android:padding="8dp"
                android:elevation="4dp"
                android:background="@drawable/square_shape"
                android:hint="Enter Email Address"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_name"/>

            <EditText
                android:id="@+id/edit_message"
                android:layout_width="370dp"
                android:layout_height="80dp"
                android:layout_marginBottom="14dp"
                android:hint="Enter Message Here"
                android:padding="8dp"
                android:elevation="4dp"
                android:background="@drawable/square_shape"
                android:gravity="top"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_email" />


            <Button
                android:id="@+id/btn_send"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:backgroundTint="@color/green_dark"
                android:layout_marginTop="8dp"
                android:text="Send"
                app:layout_constraintEnd_toEndOf="@+id/edit_message"
                app:layout_constraintStart_toStartOf="@+id/edit_message"
                app:layout_constraintTop_toBottomOf="@+id/edit_message" />

            <ImageView
                android:id="@+id/img_arrow_forward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/btn_send"
                app:layout_constraintEnd_toEndOf="@+id/btn_send"
                app:layout_constraintStart_toStartOf="@+id/btn_send"
                app:srcCompat="@drawable/arrow_forward" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>
